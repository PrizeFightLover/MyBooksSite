@model IEnumerable<MyBooksSite.ViewModels.AdminIndexUserViewModel>

@{
    ViewBag.Title = "Gebruikersbeheer";
}

<h2>Gebruikersbeheer</h2>

<p>
    @Html.ActionLink("Gebruiker aanmaken", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.UserName)

                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Roles)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <ul>
                        @if (item.Roles.Count > 0)
    {
        foreach (var role in item.Roles)
        {
                    <li>@role</li>
                            }

                        }
                        else
                        {
                            <li>Kijk rechten</li>
                        }

                    </ul>
                   </td>
                <td>
                    @Html.ActionLink("Wijzigen", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>