@model IEnumerable<MyBooksSite.Models.Author>

@{
    ViewBag.Title = "Overzicht auteurs";
}

<h2>Overzicht auteurs</h2>

<p>
    @Html.ActionLink("Auteur aanmaken", "Create")
</p>
<div class="table-responsive" >
    <table class="table" id="authorTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>

                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Authors", new { id = item.Id })">@Html.DisplayFor(modelItem => item.FullName)</a>
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Authors", new { id = item.Id })"><i class="far fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "Authors", new { id = item.Id })"><i class="far fa-trash-alt"></i></a>
                </td>

            </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
    $(document).ready(function() {
    $('#authorTable').DataTable();
    });
    </script>}