@model MyBooksSite.ViewModels.AuthorBooksViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Auteur</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Books)
        </dt>
        @foreach (var book in Model.Books)
    {
        <dd>
            @book.Title | @book.YearPublication
        </dd>
}

    </dl>
</div>
<p>
    @Html.ActionLink("Wijzigen", "Edit", new { id = Model.Author.Id }) |
    @Html.ActionLink("Terug naar overzicht", "Index")
</p>
